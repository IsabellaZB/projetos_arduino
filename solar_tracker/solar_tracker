#include <Servo.h>

Servo motor;

int ldr_direita = A0;
int ldr_esquerda = A1;
//int placa_solar = A2; 
//int  leitura_placa = 0;
int  leitura_direita = 0;
int  leitura_esquerda = 0;
int  pos = 90;
int delta = 10;

void setup() {
    motor.attach(5);
    motor.write(pos);
}

void loop() {
  //  leitura_placa = analogRead(placa_solar);
  leitura_direita = analogRead(ldr_direita); 
  leitura_esquerda = analogRead(ldr_esquerda);

  if(leitura_direita>(leitura_esquerda+delta)){
    // Se a luz estiver mais forte no lado direito, gira o servo para a direita
    pos++;
    motor.write(pos);
    delay(150);
  }else if (leitura_esquerda>(leitura_direita+delta)){
    pos--;
    motor.write(pos);
    delay(150);
  }
}